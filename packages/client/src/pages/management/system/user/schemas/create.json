{
  "title": "User",
  "type": "object",
  "properties": {
    "fullname": { "type": "string", "title": "用户名称" },
    "email": { "type": "string", "format": "email", "title": "邮箱" },
    "avatar": { "type": "string", "title": "头像" },
    "address": { "type": "string", "title": "地址" },
    "password": { "type": "string", "title": "密码" },
    "phone": {
      "type": "string",
      "format": "regex",
      "pattern": "^1[3-9]\\d{9}$",
      "title": "手机号"
    },
    "validateDate": { "type": "number", "title": "有效期" },
    "isActive": {
      "type": "boolean",
      "default": true,
      "title": "账号状态"
    },
    "role": {
      "type": "integer",
      "title": "角色"
    },
    "company": {
      "type": "integer",
      "title": "公司名称"
    }
  },
  "required": [
    "fullname",
    "password",
    "email",
    "avatar",
    "address",
    "phone",
    "company",
    "validateDate",
    "role"
  ]
}
