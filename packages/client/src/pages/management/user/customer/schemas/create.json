{
  "title": "ProductUnit",
  "type": "object",
  "properties": {
    "fullname": { "type": "string", "title": "客户名称" },
    "contact": { "type": "string", "title": "客户联系人", "default": "" },
    "address": { "type": "string", "title": "地址", "default": "" },
    "email": {
      "type": "string",
      "title": "邮箱",
      "default": ""
    },
    "desc": { "type": "string", "title": "客户描述", "default": "" },
    "paytime": { "type": "number", "title": "账期", "default": 0 },
    "phone": {
      "type": "string",
      "format": "regex",
      "pattern": "^1[3-9]\\d{9}$",
      "title": "手机号"
    },
    "deliver": {
      "type": "number",
      "enum": [0, 1],
      "default": 0,
      "title": "配送方式"
    },
    "level": {
      "type": "number",
      "title": "客户等级",
      "default": 1
    },
    "discount": {
      "type": "number",
      "title": "客户折扣",
      "description": "折扣率从10-100",
      "default": 100,
      "minimum": 10,
      "maximum": 100
    },
    "template": {
      "type": "number",
      "default": 1
    },
    "no": {
      "type": "string",
      "default": "0"
    }
  },
  "required": ["fullname", "phone"]
}
