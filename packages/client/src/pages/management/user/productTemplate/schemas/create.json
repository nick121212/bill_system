{
  "title": "Template",
  "type": "object",
  "properties": {
    "name": { "type": "string", "title": "模板名称" },
    "desc": { "type": "string", "title": "描述", "default": "" },
    "status": { "type": "number", "title": "状态", "default": 1 },
    "categories": {
      "type": "array",
      "title": "商品分类",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "title": "分类名称" },
          "products": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "productId": { "type": "number", "title": "商品" },
                "productCategoryId": { "type": "number", "title": "商品分类" },
                "price": {
                  "type": "number",
                  "title": "商品价格",
                  "default": 0,
                  "minimum": 0
                },
                "desc": {
                  "type": "string"
                },
                "count": {
                  "type": "number",
                  "title": "商品数量",
                  "default": 1,
                  "minimum": 0
                },
                "times": {
                  "type": "number",
                  "title": "商品次数",
                  "default": 1,
                  "minimum": 0
                }
              },
              "required": [
                "productId",
                "productCategoryId",
                "price",
                "count",
                "times"
              ]
            }
          }
        },
        "required": ["name", "products"]
      }
    }
  },
  "required": ["name", "desc", "status", "categories"]
}
